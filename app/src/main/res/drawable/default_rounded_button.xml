<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="3dip" android:color="@color/defaultStroke" />
            <gradient android:angle="-90" android:startColor="@color/defaultButtonPressed" android:endColor="@color/defaultButtonPressed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="1dip" android:color="@color/defaultStroke" />
            <solid android:color="@color/defaultButtonPressed" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="3dip" android:color="@color/defaultStroke" />
            <gradient android:angle="-90" android:startColor="@color/defaultButton" android:endColor="@color/defaultButton" />
        </shape>
    </item>
</selector>