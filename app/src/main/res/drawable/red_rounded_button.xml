<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="3dip" android:color="@color/redStroke" />
            <gradient android:angle="-90" android:startColor="@color/redButtonPressed" android:endColor="@color/redButtonPressed"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="1dip" android:color="@color/redStroke" />
            <solid android:color="@color/redButtonPressed" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="7dp" />
            <stroke android:width="3dip" android:color="@color/redStroke" />
            <gradient android:angle="-90" android:startColor="@color/redButton" android:endColor="@color/redButton" />
        </shape>
    </item>
</selector>